<html>
  <head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  </head>

  <body>
    <div class="mx-3 my-1 px-1 py-1">
      <h1>New game</h1>
      <ul class = "d-flex flex-row">
        <% @letters.each do |letter| %>
          <li class="card justify-content-center align-items-center mx-2 shadow"
          style="height: 80px; width: 80px; color: white; background-color: rgb(37, 150, 190); font-size: 50px; font-family: Courier, monospace"><%= letter.capitalize%></li>
        <% end %>
      </ul>
      <p>What is the longest word you can find?</p>
      <form action="score" method="post" data-turbo="false">
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <input type="text" name="letters">
        <input type="submit" value="Play">
      </form>
    </div>
  </body>
</html>
